### Copy this file to `.env` and fill secrets before running docker-compose or npm scripts.
# Values shown are examples â€” DO NOT use these secrets in production.

# PostgreSQL (used by docker-compose)
POSTGRES_DB=dental_clinic
POSTGRES_USER=dental_user
POSTGRES_PASSWORD=changeme

# Backend DB settings (used by the Nest backend when running locally)
# If running backend inside Docker, DB_HOST should be `postgres`.
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dental_user
DB_PASSWORD=changeme
DB_NAME=dental_clinic

# App secrets
JWT_SECRET=change_this_to_a_secure_random_value

# Stripe (optional)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost/api
FRONTEND_URL=http://localhost
# Database Configuration
